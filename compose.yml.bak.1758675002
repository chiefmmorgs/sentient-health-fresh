services:
  roma:
    build:
      context: .
      dockerfile: Dockerfile.roma
    ports: ["5000:5000"]
    environment:
      - OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
    networks: [app-network]
    restart: unless-stopped

  health-tracker:
    healthcheck:
      test: ["CMD", "curl", "-fsS", "http://localhost:8000/health"]
      interval: 15s
      timeout: 5s
      retries: 5
    build:
      context: .
      dockerfile: Dockerfile
    ports: ["8000:8000"]
    environment:
      - ROMA_URL=http://roma:5000
      - OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
    depends_on: [roma]
    networks: [app-network]
    restart: unless-stopped
    command: uvicorn main:app --host 0.0.0.0 --port 8000
    healthcheck:
      test: ["CMD", "curl", "-fsS", "http://localhost:8000/health"]
      interval: 15s
      timeout: 5s
      retries: 5

networks:
  app-network:
    driver: bridge

